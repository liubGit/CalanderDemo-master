<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhanyun.calanderdemo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h_30"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_lifeclub_lastmonth_default"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h_30"
            android:layout_marginRight="@dimen/h_30"
            android:text="2017年07月"
            android:textColor="#FF444A49"
            android:textSize="@dimen/f18"
            />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_lifeclub_nextmonth_default"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_1"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/h_30"
        android:layout_marginBottom="@dimen/h_30"
        />

    <com.zhanyun.calanderdemo.MonthRecyclerView
        android:id="@+id/mrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
